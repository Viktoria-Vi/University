; berechne ein Bild, das aus 4 Viertelkreisen in den Ecken
; und einem vollen Kreis in der Mitte einer 100x100 Szene
; jeweils in der angegebenen Farbe color besteht.

(define (draw r color scene)
(place-image (circle r "solid" color) (* scene 0) (* scene 0)
(place-image (circle r "solid" color) scene (* scene 0)
(place-image (circle r "solid" color) scene scene
(place-image (circle r "solid" color) (* scene 0) scene
(place-image (circle r "solid" color) (/ scene 2) (/ scene 2)
(empty-scene scene scene))))))
)
(draw 100 "red" 500)